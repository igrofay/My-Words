<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyWords" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorPrimaryDark">@color/purple_700</item>

        <item name="colorAccent">@color/teal_700</item>

    </style>
    <style name="StyleTextViewAnswer" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/press_behavior</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:text">Text</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24dp</item>
    </style>
    <style name="StyleTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_title_tv</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>


</resources>