<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_dictionary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/background_view_cell_name_dictionary"

        android:gravity="center"
        android:padding="16dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp">

        <ImageView
            android:id="@+id/image_dictionary"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/background_view_cell_image_dictionary"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_photo_standard" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:rotation="90"
            app:srcCompat="@drawable/ic_triangle" />
    </FrameLayout>
</LinearLayout>